<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.cebusqa.kodakverite.Scan_Doc_Settings">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout_printer"
        android:background="#000000">

        <include
            layout="@layout/app_bar_back_only"
            android:id="@+id/toolbar" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:background="#000000"
            android:src="@mipmap/printer1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout_printer"
        android:id="@+id/linearLayout_printername"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/printer_name"
            android:background="#000000"
            android:layout_gravity="top"
            android:src="@mipmap/kodak_name" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout_printername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Scan Document Settings"
            android:textSize="15dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:weightSum="1"
            android:background="@drawable/selectmenu">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:id="@+id/textView12"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_quality"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView26"
                android:textColor="@color/text_yelloworange"
                android:text="Normal"
                android:textAlignment="textEnd"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView26"
                android:layout_gravity="center_vertical"
                android:src="@drawable/down_allow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:background="@drawable/selectmenu"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Color"
                android:id="@+id/Color"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_color"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                android:layout_toLeftOf="@+id/imageView27"
                android:textAlignment="textEnd"
                android:layout_centerVertical="true"
                android:textColor="@color/text_yelloworange"
                android:text="Color"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView27"
                android:layout_gravity="center_vertical"
                android:src="@drawable/down_allow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:background="@drawable/selectmenu"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Document"
                android:id="@+id/textView13"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_document"
                android:layout_gravity="center"
                android:focusableInTouchMode="false"
                android:spinnerMode="dropdown"
                android:text="Text"
                android:textColor="@color/text_yelloworange"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView28"
                android:textAlignment="textEnd"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView28"
                android:layout_gravity="center_vertical"
                android:src="@drawable/down_allow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:background="@drawable/selectmenu"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save as Type"
                android:id="@+id/textView14"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_type"
                android:layout_gravity="center"
                android:spinnerMode="dropdown"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView29"
                android:text="PDF"
                android:textAlignment="textEnd"
                android:textColor="@color/text_yelloworange"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView29"
                android:layout_gravity="center_vertical"
                android:src="@drawable/down_allow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
