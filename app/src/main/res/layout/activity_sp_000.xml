<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cebusqa.kodakverite.SP_000"
    android:background="#010101">

    <include
        layout="@layout/app_bar_back_only"
        android:id="@+id/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeLayout2"
        android:layout_below="@+id/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#030303"
        android:id="@+id/relativeLayout2">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/scan"
            android:clickable="true"
            style="@android:style/Widget.Button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Scan"
                android:id="@+id/textView9"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#080707" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/crop"
            style="@android:style/Widget.Button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Crop"
                android:id="@+id/textView10"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#080707" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:id="@+id/send"
            style="@android:style/Widget.Button"
            android:layout_alignTop="@+id/crop"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Send"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#080707" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        style="@android:style/Widget.Button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/save"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Save"
            android:id="@+id/textView12"
            android:textColor="#080707"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@android:style/Widget.Button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/email"
        android:layout_above="@+id/save"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="e-mail"
            android:id="@+id/textView13"
            android:textColor="#080707"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@android:style/Widget.Button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/drive"
        android:layout_above="@+id/email"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Drive"
            android:id="@+id/textView14"
            android:textColor="#080707"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@android:style/Widget.Button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/one_box"
        android:layout_above="@+id/drive"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:visibility="visible"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="One Box"
            android:id="@+id/one"
            android:textColor="#080707"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/relativeLayout3"
        android:background="#783d3c3c"
        android:layout_marginBottom="46dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Quality : "
            android:layout_marginBottom="10dp"
            android:id="@+id/textView6"
            android:layout_above="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Document :"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Color :"
            android:id="@+id/textView8"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Plain"
            android:id="@+id/textView16"
            android:textColor="#fdb700"
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Color"
            android:id="@+id/textView17"
            android:textColor="#fdb700"
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Photo"
            android:id="@+id/textView18"
            android:textColor="#fdb700"
            android:layout_below="@+id/textView8"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/scanSettings"
            android:onClick="settings"
            android:layout_above="@+id/textView18"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:src="@mipmap/setting_icon"/>
    </RelativeLayout>
</RelativeLayout>
