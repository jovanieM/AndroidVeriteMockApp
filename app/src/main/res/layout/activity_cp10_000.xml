<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    tools:context="com.cebusqa.kodakverite.CP10_000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"></LinearLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_back_only" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/copysetting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/copies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.01"
                android:text="Copies"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/num_copies"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="0.26"
                android:background="#ffffff"
                android:gravity="center|center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/decre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:background="#000000"
                android:src="@mipmap/decre"
                android:text="-"
                android:textColor="#000000"
                android:textSize="45sp" />

            <ImageButton
                android:id="@+id/incre"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:background="#000000"
                android:src="@mipmap/incre"
                android:text="+"
                android:textColor="#000000"
                android:textSize="40sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/standardcolor"
                android:layout_width="85dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="#000000"
                android:onClick="setListFooter"
                android:src="@mipmap/standardcolor_yellow" />

            <ImageButton
                android:id="@+id/custom"
                android:layout_width="85dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="#000000"
                android:src="@mipmap/custom_white" />

            <ImageButton
                android:id="@+id/standardbw"
                android:layout_width="85dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:src="@mipmap/standardbw_white" />
        </RelativeLayout>

        <fragment
            android:id="@+id/fragment_place"
            android:name="com.cebusqa.kodakverite.FragmentOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
