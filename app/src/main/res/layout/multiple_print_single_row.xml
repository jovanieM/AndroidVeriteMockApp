<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/thumbs"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateOfPrint"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbs"
        android:layout_toEndOf="@+id/thumbs"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textSize="10dp" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar_2"
        android:progressDrawable="@drawable/yellow_progress"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thumbs"
        android:layout_toEndOf="@+id/thumbs" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/cancelPrint"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/progressBar_2"
        android:layout_alignEnd="@+id/progressBar_2"
        android:layout_marginRight="10dp" />
</RelativeLayout>