<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:weightSum="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copies"
                    android:id="@+id/copies"
                    android:textColor="#ffffff"
                    android:layout_weight="0.01"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:id="@+id/num_copies"
                    android:layout_weight="0.26"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:gravity="center|center_vertical|center_horizontal" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="-"
                    android:id="@+id/decre"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:background="#000000"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:src="@mipmap/decre" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:id="@+id/incre"
                    android:layout_marginLeft="0dp"
                    android:background="#000000"
                    android:textColor="#000000"
                    android:textSize="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/incre" />
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper Size :"
                android:id="@+id/textView19"
                android:layout_weight="0.03"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/spin_papersize"
                    android:gravity="center_vertical|left"
                    android:spinnerMode="dialog"
                    android:text="Letter"
                    android:background="@drawable/selector_text_border"
                    android:paddingStart="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color Output :"
                android:id="@+id/textView23"
                android:layout_weight="0.03"
                android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spin_color_output"
                    android:gravity="center_vertical|left"
                    android:spinnerMode="dialog"
                    android:layout_weight="0.03"
                    android:text="Color"
                    android:background="@drawable/selector_text_border"
                    android:paddingStart="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper Type :"
                android:id="@+id/textView25"
                android:layout_weight="0.03"
                android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spin_paper_type"
                    android:gravity="center_vertical|left"
                    android:spinnerMode="dialog"
                    android:layout_weight="0.03"
                    android:text="Plain"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_text_border"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Print Quality :"
                android:id="@+id/textView27"
                android:layout_weight="0.03"
                android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spin_print_quality"
                    android:gravity="center_vertical|left"
                    android:spinnerMode="dialog"
                    android:layout_weight="0.03"
                    android:text="Normal"
                    android:background="@drawable/selector_text_border"
                    android:paddingStart="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp" />


            </LinearLayout>

    </LinearLayout>


</LinearLayout>
