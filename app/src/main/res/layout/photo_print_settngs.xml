<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photoPrintSettings"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_above="@+id/relativeLayout2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignWithParentIfMissing="false"
    android:layout_marginBottom="43dp"
    android:background="#783d3c3c">

    <TextView
        android:id="@+id/quality_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/color_txtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Quality : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/document_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Document :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/color_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/document_txtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Color :"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/quality_txtView"
        android:layout_toEndOf="@+id/quality_txtView"
        android:layout_toRightOf="@+id/quality_txtView"
        android:text="Plain"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fdb700" />

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quality_txtView"
        android:layout_toEndOf="@+id/color_txtView"
        android:layout_toRightOf="@+id/color_txtView"
        android:text=" Color"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fdb700" />

    <TextView
        android:id="@+id/document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_txtView"
        android:layout_toEndOf="@+id/document_txtView"
        android:layout_toRightOf="@+id/document_txtView"
        android:text="Photo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fdb700" />

    <ImageButton
        android:id="@+id/scanSettingsIcon"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/document"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:adjustViewBounds="false"
        android:background="#00ffffff"
        android:onClick="settingsIcon"
        android:src="@mipmap/setting_icon"
        android:text="Settings" />

</RelativeLayout>