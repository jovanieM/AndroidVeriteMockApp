<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.cebusqa.kodakverite.HM10_000">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout_printer"
        android:background="#000000">

        <include
            layout="@layout/app_bar_back_only"
            android:id="@+id/toolbar" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:background="#000000"
            android:src="@mipmap/printer1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout_printer"
        android:id="@+id/linearLayout_printername"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/printer_name"
            android:background="#000000"
            android:layout_gravity="top"
            android:src="@mipmap/kodak_name" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_ecomode"
        android:layout_below="@+id/linearLayout_printername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gradient_bg"
            android:clickable="true"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:id="@+id/print_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Print Settings"
                android:id="@+id/textView60"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerVertical="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:src="@mipmap/allow_next"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gradient_bg"
            android:clickable="true"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:id="@+id/scan_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Settings"
                android:id="@+id/textView61"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerVertical="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:src="@mipmap/allow_next"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/gradient_bg"
            android:clickable="true"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:id="@+id/device_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Settings"
                android:id="@+id/textView62"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerVertical="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@mipmap/allow_next"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"
                android:background="#00ffffff"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connection"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/connection"
            android:background="@drawable/gradient_bg"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>
