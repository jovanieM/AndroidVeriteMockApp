<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <include
        layout="@layout/app_bar_back_only"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Paper Setup"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_weight="0.11" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The size and type are used in Google Cloud Print, AirPrint and Copy Setting"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="false"
        android:textSize="15dp"
        android:textColor="#ffffff" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="#342e2e">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paper Size"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letter"
            android:id="@+id/paper_size"
            android:layout_gravity="center|right"
            android:textColor="#ffcf33"
            android:singleLine="false"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/txtview1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/txtview1"
            android:textColor="#ffcf33"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_alignParentEnd="false"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="false"
            android:paddingLeft="15dp"
            android:src="@mipmap/arrowdown" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="#342e2e" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paper Type"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plain"
            android:id="@+id/paper_type"
            android:layout_gravity="center|right"
            android:textColor="#ffcf33"
            android:singleLine="false"
            android:layout_toLeftOf="@+id/txtview2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:id="@+id/txtview2"
            android:textColor="#ffcf33"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_alignParentEnd="false"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="false"
            android:paddingLeft="15dp"
            android:src="@mipmap/arrowdown" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save setting"
        android:background="@drawable/oval_background"
        android:id="@+id/btnSave"
        android:textColor="#ffffff" />
</LinearLayout>