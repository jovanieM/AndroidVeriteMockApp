<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.cebusqa.kodakverite.DS_scan">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout_printer"
        android:background="#000000">

        <include
            layout="@layout/app_bar_back_only"
            android:id="@+id/toolbar" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:background="#000000"
            android:src="@mipmap/printer1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout_printer"
        android:id="@+id/linearLayout_printername"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/printer_name"
            android:background="#000000"
            android:layout_gravity="top"
            android:src="@mipmap/kodak_name" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout_ecomode"
        android:layout_below="@+id/linearLayout_printername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_place_scan"
            android:name="com.cebusqa.kodakverite.FragmentScanSettings"
            tools:layout="@layout/fragment_ds_scan" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scan_document_settings"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/scan_document_m"
            android:background="#000000" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scan_photo_settings"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/scan_photo_m"
            android:background="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>



</RelativeLayout>
