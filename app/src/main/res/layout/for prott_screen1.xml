<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar_back_only"
        android:id="@+id/include7" />

    <TextView
        android:id="@+id/easy_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="A3 / B4 Scan"
        android:textSize="@dimen/easy_setup_size"
        android:padding="10dp"
        android:layout_below="@+id/include7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="1.   Fold A3 or B4 paper in half. \n2.   Place the left side of the paper facing on the flatbed        \n      scanner. \n3.   Close scanner cover and press [Scan]."
        android:layout_below="@+id/easy_setup"
        android:singleLine="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imageView27"
        android:layout_below="@+id/easy_setup" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView34"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/imageView6"
            android:src="@drawable/set_left_side"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/btn_default"
            android:layout_alignStart="@+id/btn_default"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/oval_background"
            android:text="Scan"
            android:textAllCaps="false"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>




