<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/root2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010101"
        tools:context="com.cebusqa.kodakverite.DocumentScan2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/app_bar_back_only" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/countSD"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/doc_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/docu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/doc_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/doc_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/countSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="85dp"
            android:text="0/0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fdb700" />

        <include
            android:id="@+id/include8"
            layout="@layout/document_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/countSD"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="#030303">

            <RelativeLayout
                android:id="@+id/crop2"
                style="@android:style/Widget.Button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/main_button"
                android:clickable="true">

                <ImageView
                    android:id="@+id/trim_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/trim_icon" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Crop"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3b3b3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send2"
                style="@android:style/Widget.Button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@mipmap/main_button"
                android:clickable="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/crop2"
                android:layout_toEndOf="@+id/crop2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:text="send"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3b3b3" />

                <ImageView
                    android:id="@+id/send_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/close_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scan2"
                style="@android:style/Widget.Button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@mipmap/main_button"
                android:clickable="true"
                android:onClick="dtouchScan"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/crop2"
                android:layout_toStartOf="@+id/crop2">

                <ImageView
                    android:id="@+id/scan_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/scan_icon" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Scan"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3b3b3" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/save2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_above="@+id/relativeLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/save_as"
                android:text="Save"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#080707"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drive2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_above="@+id/email2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/google_drive"
                android:text="Drive"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#080707" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/one_box2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_above="@+id/drive2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/one_drive"
                android:text="One Box"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#080707" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_above="@+id/save2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/email"
                android:text="e-mail"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#080707" />
        </RelativeLayout>

        <TextView
            android:id="@+id/previousSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/countSD"
            android:text="&lt;&lt;previous"
            android:textColor="@android:color/transparent" />

        <TextView
            android:id="@+id/nextSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/include8"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/save2"
            android:layout_toStartOf="@+id/save2"
            android:text="next>>"
            android:textColor="@android:color/transparent" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>