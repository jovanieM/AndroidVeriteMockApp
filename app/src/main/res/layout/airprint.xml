<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="end">
    <include layout="@layout/app_bar_back_only"
        android:id="@+id/include2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Airprint"
        android:id="@+id/airprint"
        android:layout_below="@+id/include2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="25sp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/airprint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6"
        android:background="#313131">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airprint"
            android:id="@+id/textView28"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <ToggleButton
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/toggle_selector"
            style="@style/Widget.Button.Toggle"
            android:id="@+id/toggleButton"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disable"
            android:id="@+id/tvState"
            android:textSize="20sp"
            android:layout_alignTop="@+id/textView28"
            android:layout_toLeftOf="@+id/toggleButton"
            android:layout_toStartOf="@+id/toggleButton"
            android:layout_marginRight="50dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Save setting"
        android:background="@drawable/oval_background"
        android:id="@+id/save_setting"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />


</RelativeLayout>