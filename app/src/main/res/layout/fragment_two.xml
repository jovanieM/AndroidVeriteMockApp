<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"></LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copy_btn"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:src="@mipmap/copy_small"
            android:focusable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Advanced Settings"
            android:textColor="#f4f0f0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Color"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.17"
                android:paddingTop="3dp" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/color_spinner"
                android:layout_gravity="right"
                android:paddingTop="3dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Paper Size"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.17"
                android:paddingTop="3dp" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/papersize_spinner"
                android:layout_gravity="right"
                android:paddingTop="3dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Paper Type"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.17"
                android:paddingTop="3dp" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/papertype_spinner"
                android:layout_gravity="right"
                android:paddingTop="3dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Quality"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.17"
                android:paddingTop="3dp" />

            <Spinner
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:id="@+id/spinner_quality"
                android:layout_gravity="right"
                android:paddingTop="3dp"
                android:longClickable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom" />


    </LinearLayout>





</LinearLayout>
